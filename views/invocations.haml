%p
  Invocations of the swarm
  = "##{invocations.swarm.id}"
  (
  %span.ff<>
    = "##{invocations.swarm.name}"
  ):

%table
  %colgroup
    -# ID
    %col{ style: 'width: 5em;' }
    -# Job ID
    %col{ style: 'width: 5em;' }
    -# Job Name
    %col{ style: 'width: 12em;' }
    -# Code
    %col{ style: 'width: 4em;' }
    -# Msec
    %col{ style: 'width: 4em;' }
    -# Version
    %col{ style: 'width: 5em;' }
    -# Stdout
    %col
    -# Created
    %col{ style: 'width: 10em;' }
  %thead
    %tr
      %th
        = '#'
      %th
        Job
      %th
        Name
      %th
        Code
      %th
        Msec
      %th
        Version
      %th
        Stdout
      %th
        Created
  %tbody
  - paging(invocations, 10, offset:) do |i|
    %tr
      %td
        %a{ href: iri.cut('/invocation').append(i[:id]) }<
          = "##{i[:id]}"
      %td
        - unless i[:job].nil?
          %a{ href: iri.cut('/jobs').append(i[:job]) }
            = "##{i[:job]}"
      %td
        - unless i[:name].nil?
          %a{ href: iri.over(name: i[:name]) }<
            = i[:name]
      %td.ff
        - if i[:code].zero?
          %i.fa-regular.fa-thumbs-up.good
        - else
          %span.bad
            = i[:code]
          %i.fa-solid.fa-triangle-exclamation.bad
      %td.rigth.ff
        != msec(i[:msec])
      %td.ff
        = i[:version]
      %td
        != snippet(i[:stdout])
      %td
        != ago(i[:created])
