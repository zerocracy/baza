- if the_human.admin?
  %nav
    %ul{ style: 'text-align: left' }
      - unless job.expired?
        %li
          %a{ href: iri.cut('/jobs').append(job.id).append('expire'), onclick: "return confirm('If you expire this job, there will no way to return its data back. Are you sure want to proceed?')" }
            Expire!

.columns
  %p
    Job ID:
    %br
    %span.ff
      = "##{job.id}"

  %p
    Job name:
    %br
    %a.ff{ href: iri.cut('/jobs').add(name: job.name) }
      = job.name

  %p
    Token:
    %br
    %a{ href: iri.cut('/tokens') }
      %span.ff
        = job.token.name

  %p
    Arrived from:
    %br
    %a{ href: Iri.new('https://iplocation.io/ip').append(job.ip) }<
      %span.ff<
        = job.ip
    != country_flag(job.ip)

  %p
    Created on:
    %br
    != ago(job.created)

  %p
    Verification result:
    %br
    - if job.verified.nil?
      %span.orange
        Not yet
    - elsif job.verified.start_with?('FAKE: ')
      %span.bad
        != large_text(job.verified)
      %br
      We expect you to use exactly
      != href('https://github.com/zerocracy/judges-action/blob/master/README.md', 'this YAML')
      in your GitHub workflow.
    - elsif job.verified.start_with?('OK: ')
      %i.fa-solid.fa-certificate.good
      %span.good
        != large_text(job.verified)

  %p
    User-Agent:
    %br
    %span.ff
      != large_text(job.agent)

  - if_meta(job, 'workflow_url') do |url|
    %p
      GitHub Workflow:
      %br
      %span.ff= url.split('/')[-1]
      %a.ico{ href: url, title: 'Click here to see the workflow in GitHub' }
        %i.fa-brands.fa-github

  - if_meta(job, 'vitals_url') do |url|
    %p
      Vitals:
      %br
      %a{ href: url }<
        Here
      %a.ico{ href: url, title: 'Click here to open the published vitals report' }
        %i.fa-solid.fa-list

  %p
    Meta:
    %br
    - if job.metas.empty?
      None
    - else
      - job.metas.to_a.each do |m|
        - (k, v) = m.split(':', 2)
        %span.ff{ style: 'margin-right: 2em;' }
          %i.fa-solid.fa-thumbtack.teal
          - if v.nil?
            != large_text(m)
          - else
            %span.teal<>
              != large_text(k)
            %span<> :
            %span<>
            - if k == 'github_token'
              != secret(v)
            - else
              != large_text(v)

  - if the_human.admin?
    %p
      - if job.invocations.empty?
        Invocations:
        %br
        %span.orange
          None
      - else
        = job.invocations.count
        invocations:
        %br
        - job.invocations.each do |i|
          %a{ href: iri.cut('/invocation').append(i) }<
            = "##{i}"
        %a{ href: iri.cut('/steps').append(job.id) }
          steps...

  %p
    Taken:
    %br
    - if job.taken.nil?
      %span.bad
        Not yet
    - else
      %span.ff
        != large_text(job.taken)

  %p
    Lock:
    %br
    - if job.when_locked.nil?
      None
    - else
      %a.ico{ href: iri.cut('/locks'), title: "The job was locked #{job.when_locked.ago} ago, click to unlock" }
        %i.fa-solid.fa-lock
      != ago(job.when_locked)
      - if job.lock_owner.start_with?('http')
        %a{ href: job.lock_owner }
          %i.fa-solid.fa-link

  %p
    Input Errors:
    %br
    - if job.errors.zero?
      %span.good
        None
    - else
      %i.fa-solid.fa-triangle-exclamation.bad{ title: 'Find the "judges-summary" fact in the HTML, the error are there' }
      %span.bad
        = job.errors
      (
      %a{ href: iri.cut('/jobs').append(job.id).append('input.html') }<>
        see input HTML
      )

  %p
    Expired:
    %br
    - if job.expired?
      %span.orange
        - if job.finished?
          Yes
        - else
          Still running
    - else
      %span.good
        Not yet

  - unless job.finished?
    %p
      Finished:
      %br
      %span.bad
        Not yet

  - unless job.expired?
    %p
      Input Factbase:
      %br
      %a{ href: iri.cut('/inspect').append("#{job.id}.fb") }<
        Download
      != "(#{bytes(job.size)})"
      = '|'
      %a{ href: iri.cut('/jobs').append(job.id).append('input.html') }<
        HTML

  - if job.finished?
    - r = job.result
    %p
      Finished:
      %br
      != ago(r.created)
    %p
      Exit Code:
      %br
      - if r.exit.zero?
        %i.fa-regular.fa-thumbs-up.good{ title: 'exit code is zero' }
      - else
        %i.fa-regular.fa-thumbs-down.bad
        %span.ff
          = r.exit
    %p
      Duration:
      %br
      = "#{r.msec}ms"
    - if r.exit.zero? && !job.expired?
      %p
        Output Factbase:
        %br
        %a{ href: iri.cut('/pull').append("#{job.id}.fb") }<
          Download
        != "(#{bytes(r.size)})"
        = '|'
        %a{ href: iri.cut('/jobs').append(job.id).append('output.html') }<
          HTML
      %p
        Output Errors:
        %br
        - if r.errors.zero?
          %span.good
            None
        - else
          %i.fa-solid.fa-triangle-exclamation.bad{ title: 'Find the "judges-summary" fact in the HTML, the error are there' }
          %span.bad
            = r.errors
          (
          %a{ href: iri.cut('/jobs').append(job.id).append('output.html') }<>
            see output HTML
          )

  - unless job.receipt.nil?
    %p
      Receipt:
      %br
      %span<
        = "##{job.receipt.id}"
      (
      %span<>
        != zents(job.receipt.zents)
      )

- if job.finished?
  %h2
    Stdout:
  %pre= r.stdout
