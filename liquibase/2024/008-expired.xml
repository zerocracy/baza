  <changeSet id="008" author="yegor256">
    <sql>
      ALTER TABLE job ADD COLUMN expired TIMESTAMPTZ;
      CREATE INDEX idx_job_exprired ON job(expired);
    </sql>
    <sql>
      ALTER TABLE result ADD COLUMN expired TIMESTAMPTZ;
      CREATE INDEX idx_result_exprired ON result(expired);
    </sql>
